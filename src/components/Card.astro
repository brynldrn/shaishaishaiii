---
import { Icon } from 'astro-icon'

export interface Props {
	title: string;
	href: string;
	icon: string;
}

const { href, title, icon } = Astro.props;
---

<li class="link-card">
	<a href={href} target="_blank">
		<h2>
			{icon === 'instagram' && <Icon name="typcn:social-instagram" />}
			{icon === 'facebook' && <Icon name="typcn:social-facebook" />}
			{icon === 'twitter' && <Icon name="typcn:social-twitter" />}
			{icon === 'youtube' && <Icon name="typcn:social-youtube" />}
			{icon === 'vsco' && <Icon name="simple-icons:vsco" />}
			{icon === 'tiktok' && <Icon name="simple-icons:tiktok" />}
			{icon === 'none' && <Icon name="la:slack-hash" />}
			<span>{title}</span>
		</h2>
	</a>
</li>
<style>
	.link-card {
		list-style: none;
		display: flex;
		padding: 0.25rem;
		background-color: white;
		background-image: none;
		background-size: 400%;
		border-radius: 0.6rem;
		background-position: 100%;
		transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
		box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -2px rgba(0, 0, 0, 0.1);
	}

	.link-card > a {
		width: 100%;
		text-decoration: none;
		line-height: 1.4;
		padding: 1rem 1.3rem;
		border-radius: 0.35rem;
		color: #111;
		background-color: white;
		opacity: 0.8;
	}

	h2 {
		margin: 0;
		font-size: 20px;
		transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
		display: flex;
		flex-flow: row;
		align-items: center;
		align-content: center;
	}

	h2 > span {
		display: block;
		margin-left: 6px;
	}

	h2 > svg {
		display: block;
		width: 30px;
	}

	p {
		margin-top: 0.5rem;
		margin-bottom: 0;
		color: #444;
	}
	.link-card:is(:hover, :focus-within) {
		background-position: 0;
		background-image: var(--accent-gradient);
	}
	.link-card:is(:hover, :focus-within) h2 {
		color: rgb(var(--accent));
	}
</style>
