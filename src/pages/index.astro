---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
---

<Layout title="@shaishaishaiii">
	<main>
		<h1><span class="text-gradient">@shaishaishaiii</span></h1>
		<p class="intro">
			âœ¨ click the following links and check out my content!
		</p>
		<ul role="list" class="link-card-grid">
			<Card
				href="https://www.instagram.com/shaishaishaiii/"
				title="Instagram"
				icon="instagram"
			/>
			<Card
				href="https://www.youtube.com/@shairarae"
				title="YouTube"
				icon="youtube"
			/>
			<Card
				href="https://vsco.co/shairarae/gallery"
				title="VSCO"
				icon="vsco"
			/>
			<Card
				href="https://www.tiktok.com/@shaishaishaiii"
				title="TikTok"
				icon="tiktok"
			/>
		</ul>
		<footer>
			&copy; 2023 <a href="https://baeq.dev" target="_blank">bryanaldrin</a>
		</footer>
	</main>
</Layout>

<style>
	main {
		margin: auto;
		padding: 1.5rem;
		max-width: 60ch;
	}
	h1 {
		font-size: 3rem;
		font-weight: 800;
		margin: 0;
	}
	.text-gradient {
		background-image: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
	}
	.intro {
		line-height: 1.6;
		margin: 1rem 0;
		border: 1px solid rgba(var(--accent), 25%);
		background-color: white;
		padding: 1rem;
		border-radius: 0.4rem;
	}
	.intro code {
		font-size: 0.875em;
		font-weight: bold;
		background: rgba(var(--accent), 12%);
		color: rgb(var(--accent));
		border-radius: 4px;
		padding: 0.3em 0.45em;
	}
	.intro strong {
		color: rgb(var(--accent));
	}
	.link-card-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
		gap: 1rem;
		padding: 0;
	}
	footer {
		margin-top: 36px;
		text-align: center;
		font-size: 10px;
	}
</style>
